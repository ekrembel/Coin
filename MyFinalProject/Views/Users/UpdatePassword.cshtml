@using MyFinalProject.ViewModels;

@model UpdatePasswordViewModel
@{
    ViewBag.Title = "Update Password";
}

@if (ViewBag.message != null)
{
    @if (ViewBag.status == "success")
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.message
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            @ViewBag.message
        </div>
    }
}



<h1 class="display-4">Update Password</h1>


<div class="box-shadow form-base container" style="height: auto;">
    <form method="post" asp-action="UpdatePassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger" style="font-size: small;"></div>
        <div>
            <input hidden value="@User.Identity.Name" asp-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="OldPassword"></label>
            <input class="form-control" type="password" asp-for="OldPassword" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input class="form-control" type="password" asp-for="NewPassword" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword"></label>
            <input class="form-control" type="password" asp-for="ConfirmNewPassword" />
        </div>
        <div style="text-align: center;">
            <input class="btn btn-outline-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>




