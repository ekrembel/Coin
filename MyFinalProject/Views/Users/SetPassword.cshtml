@using MyFinalProject.ViewModels
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

<h1 class="display-4">Reset Password</h1>

@if (ViewBag.message != null)
{
    @if (ViewBag.status == "success")
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.message
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            @ViewBag.message
        </div>
    }
}


<div class="box-shadow form-base container" style="height: auto;">
    <form method="post" asp-action="SetPassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger" style="font-size: small;"></div>
        <input hidden value="@ViewBag.email" name="email" />
        <input hidden value="@ViewBag.token" name="token" />
        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input class="form-control" type="password" asp-for="NewPassword" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmNewPassword"></label>
            <input class="form-control" type="password" asp-for="ConfirmNewPassword" />
        </div>
        <div style="text-align: center;">
            <input class="btn btn-outline-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>

