@model MyFinalProject.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h1 class="display-4">Login</h1>


<div class="box-shadow form-base container" style="height: auto;">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger" style="font-size: small;"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input class="form-control" asp-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
        </div>
        <div style="text-align: center;">
            <input class="btn btn-outline-primary" type="submit" value="Login" />
        </div>
        <hr />
        <div style="padding: 5px; text-align: center; font-size: small;">
            <a asp-controller="Users" asp-action="ForgotPassword">Forgot Password</a>
        </div>

        <div style="padding: 5px; text-align: center; font-size: small;">
            <a asp-controller="Users" asp-action="CreateAccount">Create Account</a>
        </div>
    </form>
</div>



