@using Microsoft.AspNetCore.Identity;

@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Coin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div id="container" class="container">
                @if (signInManager.IsSignedIn(User))
                {
                    <a style="margin-top: 10px;" class="navbar-brand" asp-area="" asp-controller="Transactions" asp-action="Summary"><span class="brand" style="font-size: 30px; font-family: fantasy;">Coin</span></a>
                }
                else
                {
                    <a style="margin-top: 10px;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span class="brand" style="font-size: 30px; font-family: fantasy;">Coin</span></a>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="float: right;">
                    <ul class="navbar-nav">
                        @if (signInManager.IsSignedIn(User))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Quote" asp-action="Index">Quote</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Quote" asp-action="All">Companies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Buy" asp-action="Index">Buy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Summary">Bought</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sell" asp-action="Index">Sell</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="History">Sold</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" asp-controller="" asp-action="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Users" asp-action="FundAmount">Add Fund</a>
                                    <a class="dropdown-item" asp-controller="Users" asp-action="UpdatePassword">Update Password</a>
                                    <a class="dropdown-item" asp-controller="Users" asp-action="DeleteAccount">Delete Account</a>
                                    <div class="dropdown-divider"></div>
                                    <div class="text-center">
                                        <form method="post" asp-action="logout" asp-controller="users">
                                            <button class="btn btn-outline-danger" type="submit">Logout</button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="text-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            <small>All rights reserved. &copy; 2020 ekrembel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></small> 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
